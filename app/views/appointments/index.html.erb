<section class="container-xxl py-3 appt-hero">
  <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-2">
    <div>
      <h1 class="h3 mb-1" style="color:var(--primary)">Citas</h1>
      <p class="text-muted mb-0">Gestiona tus pr√≥ximas consultas y revisa el historial</p>
    </div>
    <div>
      <%= link_to "+ Agendar nueva cita", new_appointment_path, class: "btn btn-primary" %>
    </div>
  </div>
</section>

<div class="container-xxl">
  <div class="row g-4">
    <div class="col-12">
      <% if @next_appointment.present? %>
        <div class="card appt-next">
          <div class="card-body d-flex justify-content-between align-items-start">
            <div class="d-flex gap-3">
              <div class="appt-next-icon">üìÖ</div>
              <div>
                <h5 class="card-title mb-1">Pr√≥xima cita</h5>
                <div class="fw-semibold"><%= @next_appointment.reason %>
                  <% if @next_appointment.respond_to?(:specialty) && @next_appointment.specialty.present? %>
                    <span class="badge rounded-pill text-bg-light ms-1"><%= @next_appointment.specialty %></span>
                  <% end %>
                </div>
                <div class="text-muted"><%= l(@next_appointment.scheduled_at, format: :long) %></div>
              </div>
            </div>
            <div class="d-flex gap-2">
              <%= link_to "Editar", edit_appointment_path(@next_appointment),
                          class: "btn btn-primary btn-sm" %>
              <%= button_to "Eliminar",
                            appointment_path(@next_appointment),
                            method: :delete,
                            data: { turbo_confirm: "¬øEliminar esta cita?" },
                            class: "btn btn-outline-danger btn-sm" %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="alert alert-info appt-empty mb-0">
          No tienes pr√≥ximas citas. <%= link_to "Agendar ahora", new_appointment_path, class: "alert-link" %>
        </div>
      <% end %>
    </div>

    <div class="col-12">
      <div class="card appt-list">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="mb-0">Todas las citas</h5>
            <%= link_to "Agendar cita", new_appointment_path, class: "btn btn-sm btn-outline-primary" %>
          </div>

          <% if @appointments.any? %>
            <ul class="list-group list-group-flush">
              <% @appointments.each do |a| %>
                <li class="list-group-item d-flex justify-content-between align-items-center appt-item">
                  <div class="d-flex align-items-start gap-3">
                    <div class="appt-dot"></div>
                    <div>
                      <div class="fw-semibold">
                        <%= a.reason %>
                        <% if a.respond_to?(:specialty) && a.specialty.present? %>
                          <span class="badge rounded-pill text-bg-light ms-1"><%= a.specialty %></span>
                        <% end %>
                      </div>
                      <div class="small text-muted"><%= l(a.scheduled_at, format: :long) %></div>
                    </div>
                  </div>
                  <div class="d-flex gap-2">
                    <%= link_to "Editar", edit_appointment_path(a),
                                class: "btn btn-outline-primary btn-sm" %>
                    <%= button_to "Eliminar",
                                  appointment_path(a),
                                  method: :delete,
                                  data: { turbo_confirm: "¬øEliminar esta cita?" },
                                  class: "btn btn-outline-danger btn-sm" %>
                  </div>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="text-center text-muted py-4">Todav√≠a no registraste citas.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
