<div class="row g-3">
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Próximas citas</h5>
        <% if @appointments.any? %>
          <ul class="list-group list-group-flush">
            <% @appointments.each do |a| %>
              <li class="list-group-item d-flex justify-content-between">
                <span><strong><%= a.reason %></strong></span>
                <span class="badge text-bg-secondary"><%= l a.scheduled_at, format: :short %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted">Sin citas. <%= link_to "Solicitar una", new_appointment_path %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">Último análisis</h5>
        <% if @last_analysis %>
          <p class="mb-1"><strong><%= @last_analysis.description %></strong></p>
          <p class="mb-2"><%= link_to "Ver archivo", url_for(@last_analysis.file), target: :_blank %></p>
          <div class="small text-muted"><%= truncate(@last_analysis.ai_result, length: 200) %></div>
        <% else %>
          <p class="text-muted">Aún no has subido análisis. <%= link_to "Subir uno", new_analysis_path %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Mis chats</h5>
        <%= form_with model: Chat.new, url: chats_path, class: "row g-2", local: true do |f| %>
          <div class="col-md-6"><%= f.text_field :title, class: "form-control", placeholder: "Nombre del chat" %></div>
          <div class="col-md-3"><%= f.submit "Crear", class: "btn btn-primary w-100" %></div>
          <div class="col-md-3"><%= link_to "Ver todos", chats_path, class: "btn btn-outline-primary w-100" %></div>
        <% end %>

        <div class="mt-3 d-flex gap-2 flex-wrap">
          <% @chats.each do |c| %>
            <%= link_to c.title, c, class: "badge text-bg-light p-2 border" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
