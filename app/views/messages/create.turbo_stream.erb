<turbo-stream action="replace" target="messages">
  <template>
    <div id="messages" class="list-group list-group-flush">
      <% @chat.messages.order(:created_at).each do |m| %>
        <div class="list-group-item">
          <span class="badge <%= m.role == 'user' ? 'text-bg-primary' : 'text-bg-success' %>"><%= m.role %></span>
          <div class="mt-2"><%= simple_format m.content %></div>
        </div>
      <% end %>
    </div>
  </template>
</turbo-stream>
