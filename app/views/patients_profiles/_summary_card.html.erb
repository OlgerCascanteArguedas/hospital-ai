<div class="card h-100">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <h5 class="card-title mb-0">Mi perfil médico</h5>
      <%= link_to "Editar perfil", edit_patients_profile_path, class: "btn btn-outline-primary btn-sm" %>
    </div>

    <% if profile.present? %>
      <div class="row mt-3 small">
        <div class="col-md-3"><strong>Edad:</strong> <%= profile.age || "—" %></div>
        <div class="col-md-3"><strong>Género:</strong> <%= profile.gender || "—" %></div>
        <div class="col-md-3"><strong>Talla:</strong> <%= profile.height ? "#{profile.height} cm" : "—" %></div>
        <div class="col-md-3"><strong>Peso:</strong> <%= profile.weight ? "#{profile.weight} kg" : "—" %></div>
      </div>
      <div class="row mt-2 small">
        <div class="col-md-6"><strong>Alergias:</strong> <%= profile.allergies.presence || "—" %></div>
        <div class="col-md-6"><strong>Condiciones:</strong> <%= profile.conditions.presence || "—" %></div>
        <div class="col-md-6"><strong>Medicaciones:</strong> <%= profile.medication.presence || "—" %></div>
        <div class="col-md-6"><strong>Historia médica:</strong> <%= profile.medical_history.presence || "—" %></div>
      </div>
    <% else %>
      <p class="text-muted mt-3">Aún no hay datos en tu perfil.</p>
    <% end %>
  </div>
</div>
