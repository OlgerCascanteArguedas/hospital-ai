<div class="container mt-4">
  <h2>Tu Perfil Médico</h2>

  <div class="d-flex justify-content-end mb-2">
    <%= link_to "Editar perfil", edit_patients_profile_path, class: "btn btn-outline-primary btn-sm me-2" %>
    <%= button_to "Eliminar perfil",
                  patients_profile_path,
                  method: :delete,
                  form: { data: { turbo_confirm: "¿Estás seguro de eliminar tu perfil médico? Esta acción no se puede deshacer." } },
                  class: "btn btn-outline-danger btn-sm" %>
  </div>

<%= render partial: "patients_profile/summary_card",
            locals: { profile: @profile, show_edit: false } %>

  <%# Si tu partial está en /patients_profiles/ (plural), usa:
      render partial: "patients_profiles/summary_card", locals: { profile: @profile, show_edit: false } %>
</div>
